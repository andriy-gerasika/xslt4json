<project default="build">
	<property name="name" value="xslt4json" />

	<target name="clean">
		<delete dir="build" />
	</target>

	<target name="build" depends="clean">
		<mkdir dir="build" />
		<zip zipfile="build/${name}.zip">
			<fileset excludes="bin, build, build.xml, files/output.json" dir="."/>
		</zip>
	</target>

</project>